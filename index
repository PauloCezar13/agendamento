<script>
  // Definir data mínima hoje para o input date
  document.addEventListener('DOMContentLoaded', () => {
    const dataInput = document.getElementById('data_visita');
    const hoje = new Date().toISOString().split('T')[0];
    dataInput.setAttribute('min', hoje);
  });

  // Validação extra para certificado (12 números)
  const certificadoInput = document.getElementById('certificado');
  certificadoInput.addEventListener('input', () => {
    const erroCert = document.getElementById('error-certificado');
    const valor = certificadoInput.value;
    const valido = /^\d{12}$/.test(valor);
    if (!valido) {
      erroCert.style.display = 'block';
      certificadoInput.setCustomValidity("O certificado deve conter exatamente 12 números.");
    } else {
      erroCert.style.display = 'none';
      certificadoInput.setCustomValidity('');
    }
  });

  // Buscar endereço pelo CEP (ViaCEP)
  document.getElementById('cep').addEventListener('blur', function() {
    let cep = this.value.replace(/\D/g, '');
    if (cep.length === 8) {
      fetch(`https://viacep.com.br/ws/${cep}/json/`)
        .then(response => response.json())
        .then(data => {
          if (!data.erro) {
            const enderecoInput = document.getElementById('endereco');
            enderecoInput.value = `${data.logradouro}, ${data.bairro}, ${data.localidade} - ${data.uf}`;
          } else {
            alert('CEP não encontrado.');
          }
        })
        .catch(() => alert('Erro ao consultar CEP.'));
    }
  });

  function enviarFormulario(e) {
    e.preventDefault();

    const checkboxes = document.querySelectorAll('input[name="periodo[]"]:checked');
    if (checkboxes.length === 0) {
      alert('Por favor, selecione pelo menos um período.');
      return false;
    }

    const form = document.getElementById('formAgendamento');
    const data = new FormData(form);

    fetch('https://script.google.com/a/macros/portoseguro.com.br/s/AKfycbypqF5MM0RlLKGdV1t-2jF-tENm7pGNp3lA8nP38d4IHecrjgIU7iLhOAGtnQxAmex5vg/exec', {
      method: 'POST',
      body: data
    })
    .then(response => response.text())
    .then(text => {
      if (text.toLowerCase().includes('sucesso')) {
        document.getElementById('form-container').style.display = 'none';
        const confirmacao = document.getElementById('confirmacao');
        confirmacao.style.display = 'block';

        const periodos = Array.from(checkboxes).map(cb => cb.value).join(', ');
        document.getElementById('dadosConfirmacao').innerHTML = `
          <strong>Loja:</strong> ${data.get('loja')}<br>
          <strong>Certificado:</strong> ${data.get('certificado')}<br>
          <strong>Cliente:</strong> ${data.get('nome_cliente')}<br>
          <strong>Produto:</strong> ${data.get('produto') || 'Não informado'}<br>
          <strong>CEP:</strong> ${data.get('cep') || 'Não informado'}<br>
          <strong>Endereço:</strong> ${data.get('endereco')}<br>
          <strong>Número:</strong> ${data.get('numero') || 'Não informado'}<br>
          <strong>Ponto de Referência:</strong> ${data.get('referencia') || 'Não informado'}<br>
          <strong>Telefone:</strong> ${data.get('telefone') || 'Não informado'}<br>
          <strong>Data da Visita:</strong> ${data.get('data_visita')}<br>
          <strong>Período(s):</strong> ${periodos}
        `;
      } else {
        alert('Erro no agendamento: ' + text);
      }
    })
    .catch(() => {
      alert('Erro ao enviar formulário. Verifique sua conexão e tente novamente.');
    });

    return false;
  }
</script>
</body>
